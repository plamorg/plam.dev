---
import { Icon } from "astro-icon";

const { name, website, github, email, linkedin, about, location, picture } = Astro.props.person;
const { id } = Astro.props;
---

<div class="w-full px-5 py-4 flex flex-col gap-1 w-64">
    <div class="mx-auto">
        <img src={picture} width={120} height={120} class="rounded-full"></img>
    </div>
    <div class="w-full">
        <h4 class="text-md font-medium text-center">{name}</h4>
        <div class="flex flex-row gap-1 mx-auto justify-center items-start mb-2">
            <Icon class="w-4" name="mdi:location" />
            <p class="text-sm">{location}</p>
        </div>
        <p class="text-xs">{about}</p>
        <div class="flex flex-row gap-1">
            <a href={`mailto:${email}`}>@</a>
            <a href={website}>://</a>
            <Icon class="w-6" name="mdi:github" />
            <Icon class="w-6" name="mdi:linkedin" />
        </div>
    </div>
</div>    

<style>
    [astro-icon] {
        color: #868686;
    }
</style>
